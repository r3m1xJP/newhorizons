@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.PageDescription = "Learn more about the Programs available at Medix College.";
}
<br />
<div class="container">
    <div class="heroWrapper">
        @ViewBag.HeroText
    </div>
    <div class="leftMenuWrapper col-sm-3 custom-collapse">
        <button class="btn-brand-white collapse-toggle visible-xs" type="button" data-toggle="collapse" data-parent="custom-collapse" data-target="#side-menu-programs">
            <span class=""><span class="glyphicon glyphicon-align-justify"></span></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <ul class="leftMenu list-unstyled collapse" id="side-menu-programs">
            <li class="item header">@Html.ActionLink("PROGRAMS", "AllPrograms", "Programs")</li>
            <li class="item side-menu-h2">@Html.ActionLink("All Programs", "AllPrograms", "Programs")</li>
            <li class="item side-menu-h2">@Html.ActionLink("IT Enterprise Professional", "ITEnterpriseProfessional", "Programs")</li>
            <li class="item side-menu-h2">@Html.ActionLink("IT Helpdesk Associate", "ITHelpDeskAssociate", "Programs")</li>
            <li class="item side-menu-h2">@Html.ActionLink("IT Office", "ITOffice", "Programs")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Network Administrator", "NetworkAdministrator", "Programs")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Network Technician", "NetworkTechnician", "Programs")</li>

            <li class="item btn btn-brand btn-block spacer-top" id="askQuestion">Ask a Question</li>
            <li class="item btn btn-brand btn-block" id="requestCatalogue">Request Catalogue</li>
        </ul>

        <br />
    </div>

    <div class="col-sm-9 pull-right">
        <div class="contentBody">
            <div class="row bodyHeaderWrapper">
                @ViewBag.BodyHeaderText
            </div>
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
</div>

<script>
    $(document).ready(function () {
        $('#applyOnline').click(function () {
            $('.popup-form-wrapper').hide();
            $('#applyNowWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#requestCatalogue').click(function () {
            $('.popup-form-wrapper').hide();
            $('#requestCatalogueWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#askQuestion').click(function () {
            $('.popup-form-wrapper').hide();
            $('#askQuestionWrapper').show();
            $('.form-overlay').slideDown()
        });
    });
</script>

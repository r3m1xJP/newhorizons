@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Home";
}
<br />
<div class="container">
    <div class="heroWrapper">
        @ViewBag.HeroText
    </div>

    <div class="leftMenuWrapper col-sm-3 custom-collapse">
        <button class="btn-brand-white collapse-toggle visible-xs" type="button" data-toggle="collapse" data-parent="custom-collapse" data-target="#side-menu-home">
            <span class=""><span class="glyphicon glyphicon-align-justify"></span></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <ul class="leftMenu list-unstyled collapse" id="side-menu-home">
            <li class="item header">@Html.ActionLink("NEW HORIZONS HOME", "Index", "Home")</li>
            <li class="item side-menu-h2">@Html.ActionLink("New Horizons Home", "Index", "Home")</li>
            <li class="item side-menu-h2">@Html.ActionLink("News Directory", "NewsDirectory", "Home")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Referral Program", "ReferralProgram", "Home")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Hire a New Horizons Grad", "HireANewHorizonsGrad", "Home")</li>

            <li class="item btn btn-brand btn-block spacer-top" id="askQuestion">Ask a Question</li>
            <li class="item btn btn-brand btn-block" id="requestCatalogue">Request Catalogue</li>
        </ul>
        <br />
    </div>

    <div class="col-sm-9 pull-right">
        <div class="contentBody">
            <div class="row bodyHeaderWrapper">
                @ViewBag.BodyHeaderText
            </div>
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
</div>

<script>
    $(document).ready(function () {
        $('#applyOnline').click(function () {
            $('.popup-form-wrapper').hide();
            $('#applyNowWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#requestCatalogue').click(function () {
            $('.popup-form-wrapper').hide();
            $('#requestCatalogueWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#askQuestion').click(function () {
            $('.popup-form-wrapper').hide();
            $('#askQuestionWrapper').show();
            $('.form-overlay').slideDown()
        });
    });
</script>
@{
    Layout = "~/Views/DiscoverNewHorizons/_DiscoverNewHorizonsLayout.cshtml";
}

@{
    ViewBag.Title = "Partner Schools";
    ViewBag.PageDescription = "Learn more about New Horizons and why programs offered at here will help you in your IT Career.";
}

<div class="col-sm-12 botMARG">
    <h1 class="contentPageH1">PARTNER SCHOOLS</h1>
    <ol class="breadcrumb">
        <li class="contentp">@Html.ActionLink("Home", "Index", "Home")</li>
        <li class="active contentp">Partner Schools</li>
    </ol>
    <img class="img-responsive" width="100%" src="/Content/images/dnh-partnership.jpg" alt="IT server admin professional" />

</div>

<div class="col-sm-8 mid-padding">




    <div class="panel panel-default">
        <div class="panel-body">
            <h1 class="contentH1">Medix College or Healthcare</h1>
            <hr class="hrp" />
            <p class="contentp">
               
                <img class="img-responsive" width="100%" src="~/Content/images/program-ioda.jpg" alt="IT server admin professional" />
                <br/>

                Medix College is the industry leading Health Care career training for those looking to become medical professionals. 
                Currently Medix College has six campuses across Ontario with each of the featuring state-of-the-art facilities. 
                <br /><br />
                <a href="http://medixcollege.ca" onclick="return popitup('http://medixcollege.ca')">Go to Medix College</a>

               
            </p>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-body">
            <h1 class="contentH1">North American Trade Schools</h1>
            <hr class="hrp" />
            <p class="contentp">

                <img class="img-responsive" width="100%" src="~/Content/images/banner-solar.jpg" alt="solar energy technician working on panels" />
                <br />
                North American Trade Schools is the leading training for those looking for a career in the skilled trades.
                North American Trade Schools has two state-of-the-art facilities in London Ontario and Brampton Ontario.<br/><br/>
                <a href="http://northamericantradeschools.ca/" onclick="return popitup('http://northamericantradeschools.ca/')">Go to North American Trade Schools</a>


            </p>
        </div>
    </div>

    <button type="button" class="btn btn-default btn-lg btn-block contentH2"><span class="glyphicon glyphicon-send"></span>&nbsp;&nbsp;@Html.ActionLink("GO TO PROGRAM DIRECTORY", "AllPrograms", "Programs")</button>
    <br />
    <button type="button" class="btn btn-default btn-lg btn-block contentH2"><span class="glyphicon glyphicon-map-marker"></span>&nbsp;&nbsp;@Html.ActionLink("GO TO CAMPUS DIRECTORY", "Index", "Campuses")</button>
    <br />
</div>



<div class="col-sm-4 pull-right no-padding">
    <div class="panel panel-default">

        <div class="panel-body">
            <form id="programsQuestionsForm" name="programsQuestionsForm" method="post" class="questionsForm" action="/home/askquestionprogram">
                <input type="hidden" name="ORGID" value="240" />
                <input type="hidden" name="MailListID" value="240001" />
                <h1 class="contentH1 text-center">
                    <span class="glyphicon glyphicon-comment"></span>&nbsp; ASK A QUESTION
                </h1><hr class="hrpblue" />
                <div class="input-group spacer-top">
                    <label class="pull-left contentp">First Name: <span class="text-danger">*</span></label>
                    <input type="text" class="form-control pull-right" name="FirstName">
                </div>
                <div class="input-group spacer-top">
                    <label class="pull-left contentp">Email: <span class="text-danger">*</span></label>
                    <input type="email" class="form-control pull-right" name="Email">
                </div>
                <div class="input-group spacer-top">
                    <label class="pull-left contentp">Location: <span class="text-danger">*</span></label>
                    <select class="form-control pull-right" name="CampusID">
                        <option value="0">Select</option>
                        <option value="24005">New Horizons</option>

                    </select>
                </div>
                <div class="input-group spacer-top">
                    <label class="pull-left contentp">Program: <span class="text-danger">*</span></label>
                    <select class="form-control pull-right" name="ProgramID">
                        <option value="0">Select</option>
                        <option class="0 24005" value="41050">IT Enterprise Professional</option>
                        <option class="0 24005" value="41049">IT Help Desk Associate</option>
                        <option class="0 24005" value="41048">IT Office</option>
                        <option class="0 24005" value="41040">IT Server Administrator Professional</option>
                        <option class="0 24005" value="41051">IT Service Technician</option>

                    </select>
                </div>
                <div class="input-group spacer-top">
                    <label class="pull-left contentp">Comments: </label>
                    <textarea class="form-control pull-right" name="Comment2"></textarea>
                </div>
                <div class="small-text spacer-top text-center grayColor">
                    Please contact me with more information relating to the school and program(s). I understand I may cancel my consent at anytime.
                </div>
                <div class="text-center">
                    <input id="applyNowSubmit" type="submit" value="Submit" class="btn popup-form-button spacer-top btn-block" />
                </div>
            </form>
        </div>

    </div>


</div>


<script language="javascript" type="text/javascript">
